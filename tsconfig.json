{
  "compilerOptions": {
    "target": "ES2020",             
    "module": "ES2020",            
    "outDir": "./dist/js",             
    "rootDir": "./src",          
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": false                
  },
  "include": ["src/**/*.ts","src/types/**/*.d.ts"]
}
